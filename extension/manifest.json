{
    "manifest_version": 3,
    "name": "Friction - Impulse Guard",
    "version": "1.0.0",
    "description": "Get nudged before impulse purchases. Stop and think before you buy.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "*://*.amazon.com/*",
        "*://*.temu.com/*",
        "*://*.shein.com/*",
        "*://*.aliexpress.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "modal.css"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}